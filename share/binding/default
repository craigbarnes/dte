bind C-left 'word-bwd -s'
bind C-right 'word-fwd -s'
bind C-up up
bind C-down down

bind M-left bol
bind M-right eol
bind M-up pgup
bind M-down pgdown

bind ^C copy
bind ^F search
bind ^G 'search -n'
bind ^H 'erase-word -s'
# ^I == Tab
bind ^L "command 'line '"
# ^M == Enter
bind ^N open
bind ^O git-open
bind ^Q quit
bind ^R 'command replace\ '
bind ^S 'save -p'
bind ^T open
bind ^V paste
bind ^W 'close -wq'
bind ^X cut
bind ^Y redo
bind ^Z undo
bind ^] tag

bind M-b bof
bind M-c 'toggle -v case-sensitive-search'
bind M-e eof
bind M-f 'search -w'
bind M-F 'search -wr'
bind M-j format-paragraph
bind M-l 'select -l'
bind M-n 'msg -n'
bind M-p 'msg -p'
bind M-s select
bind M-t 'insert -m "\t"'
bind M-u unselect
bind M-x command
bind M-z suspend

bind M-1 "view 1"
bind M-2 "view 2"
bind M-3 "view 3"
bind M-4 "view 4"
bind M-5 "view 5"
bind M-6 "view 6"
bind M-7 "view 7"
bind M-8 "view 8"
bind M-9 "view 9"
bind M-0 "view last"

bind M-, prev
bind M-. next
bind M-< wprev
bind M-> wnext
bind M-- 'shift -- -1'
bind M-= 'shift +1'
bind 'M-^?' 'erase-word -s'
bind M-\; command
bind M-: command
bind M-/ search
bind M-\? "search -r"

# Alt+Shift+1 / Alt+Shift+2
bind M-! "move-tab left"
bind M-@ "move-tab right"

bind F1 "run man dte"
bind F3 'search -n'
bind F4 'search -p'

