include builtin://share/binding/default
include builtin://share/color/light
include builtin://share/compiler/gcc
include builtin://share/compiler/go
include builtin://share/filetype
include builtin://share/option

alias cl close
alias o open
alias q quit
alias r replace
alias s save
alias t tag
alias man "run man"
alias make "compile gcc make"
alias read "pass-through cat"

# format quoted text in email messages
alias fmt-email "filter fmt -w 74 -p '> '"

# gray background for current line
#hi currentline keep gray keep

errorfmt grep "^([^:]+):([0-9]+):(.*)" file line message

# Remove possible "F" from $LESS so that less will always wait for
# keypress and "run" can be used without -p.
#
#   R: allow ANSI colors
#   S: chop long lines
setenv LESS RS
