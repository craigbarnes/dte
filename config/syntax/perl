syntax perl

# TODO: variables, numbers, regexp, builtins, POD
state code
    char # comment
    char -b a-zA-Z_ identifier
    char \" dq
    char \' sq
    eat this

state comment
    char "\n" code
    eat this

state identifier
    char -b a-zA-Z0-9_ this
    inlist keyword code
    noeat code

state dq string
    char \" code string
    # TODO: escapes
    # TODO: interpolated variables
    eat this

state sq string
    char \' code string
    # TODO: escapes
    eat this

list keyword \
    break continue default do each else elsif for foreach given if last \
    local my next our package return state sub unless until when while \
    __FILE__ __LINE__ __PACKAGE__
