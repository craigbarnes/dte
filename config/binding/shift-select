# This config rebinds cursor movement keys so that pressing
# Shift+key starts (or continues) selecting an area of text
# while pressing a key without Shift will end the selection.
#
# This config is not loaded by default. To use it, add
# "include -b binding/shift-select" to your personal rc file.

bind up 'unselect; up'
bind down 'unselect; down'
bind left 'unselect; left'
bind right 'unselect; right'
bind S-up 'select -k; up'
bind S-down 'select -k; down'
bind S-left 'select -k; left'
bind S-right 'select -k; right'

bind C-left 'unselect; word-bwd -s'
bind C-right 'unselect; word-fwd -s'
bind C-up 'unselect; up'
bind C-down 'unselect; down'
bind C-S-left 'select -k; word-bwd -s'
bind C-S-right 'select -k; word-fwd -s'
bind C-S-up 'select -kl; up'
bind C-S-down 'select -kl; down'

bind M-left 'unselect; bol'
bind M-right 'unselect; eol'
bind M-up 'unselect; pgup'
bind M-down 'unselect; pgdown'
bind M-S-left 'select -k; bol'
bind M-S-right 'select -k; eol'
bind M-S-up 'select -k; pgup'
bind M-S-down 'select -k; pgdown'

bind C-M-up 'unselect; pgup'
bind C-M-down 'unselect; pgdown'
bind C-M-S-up 'select -kl; pgup'
bind C-M-S-down 'select -kl; pgdown'

bind home 'unselect; bol'
bind end 'unselect; eol'
bind S-home 'select -k; bol'
bind S-end 'select -k; eol'

bind pgup 'unselect; pgup'
bind pgdown 'unselect; pgdown'
bind S-pgup 'select -k; pgup'
bind S-pgdown 'select -k; pgdown'

bind C-pgup 'unselect; pgup'
bind C-pgdown 'unselect; pgdown'
bind C-S-pgup 'select -kl; pgup'
bind C-S-pgdown 'select -kl; pgdown'
